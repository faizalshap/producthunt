@model ProductHunt.Domain.Models.ArticleModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Article</h2>
<div class="row">
    <div class="col col-lg-3">Number</div><div class="col col-lg-9">
        <a href="@Url.RouteUrl("article-edit", new {categoryName = ViewBag.Category, articleName = Model.Name.Replace(" ", "-")})">@Model.Number</a>
    </div>
    <div class="col col-lg-3">Name</div><div class="col col-lg-9">@Model.Name</div>
    <div class="col col-lg-3">Category</div><div class="col col-lg-9">@Model.CategoryName</div>
    <div class="col col-lg-3">Desription</div><div class="col col-lg-9">@Model.Description</div>
    <div class="col col-lg-3">Price</div><div class="col col-lg-9">@Model.Price</div>
    <div class="col col-lg-3">Price incl. of VAT</div><div class="col col-lg-9">@Model.PriceWithVAT</div>
</div>
